{
  "name": "aivec/welcart-settlement-modules",
  "description": "This package is for easy creation of Welcart 決済モジュール",
  "type": "library",
  "license": "GPL-2.0-only",
  "authors": [
    {
      "name": "Evan Shaw",
      "email": "evandanielshaw@gmail.com"
    }
  ],
  "require": {
    "aivec/welcart-generic": ">=2.0 <5.0",
    "aivec/aauth": ">=3.0",
    "psr/log": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "Aivec\\Welcart\\SettlementModules\\": "src"
    }
  },
  "require-dev": {
    "aivec/phpcs-wp": "^1.0",
    "aivec/codecept-docker": "^0.1.3",
    "wp-cli/i18n-command": "^2.2"
  },
  "scripts": {
    "lint": "phpcs -s --standard=Aivec --extensions=php .",
    "lint:fix": "phpcbf -s --standard=Aivec --extensions=php .",
    "i18n:update-pos": [
      "wp i18n make-pot --domain=smodule . src/languages/messages.pot",
      "find ./src/languages -name \"*.po\" | xargs -I % msgmerge -o % % src/languages/messages.pot"
    ],
    "i18n:compile-pos": "find ./src/languages -name \"*.po\" | sed 's/\\.po//g' | xargs -I % msgfmt %.po -o %.mo",
    "test": [
      "codecept run unit",
      "aivec-codecept codecept run wpunit"
    ],
    "test:unit": "codecept run unit"
  }
}
